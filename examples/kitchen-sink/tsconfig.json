{
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"types": ["@cloudflare/workers-types", "@types/node"],
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		//
		"baseUrl": "."
	},
	"include": ["src", "db", "build.ts", "drizzle.config.ts"]
}
